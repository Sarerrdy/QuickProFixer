@page
@using QuickProFixer.Areas.Identity.Pages.Account
@model RegisterAsClienteleModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-5">
        @*Register as Clientel*@
        <form id="registerClienteleForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
            <h2>Create a new Clientele account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <br />

            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <br />

            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <br />

            <div class="form-floating">
                <input asp-for="Input.Title" class="form-control" />
                <label asp-for="Input.Title"></label>
                <span asp-validation-for="Input.Title" class="text-danger"></span>
            </div>
            <br />

            <div class="form-floating">
                <input asp-for="Input.FirstName" class="form-control" />
                <label asp-for="Input.FirstName"></label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <br />

            <div class="form-floating">
                <input asp-for="Input.LastName" class="form-control" />
                <label asp-for="Input.LastName"></label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <br />

            <div class="form-floating">
                <input asp-for="Input.MiddleName" class="form-control" />
                <label asp-for="Input.MiddleName"></label>
                <span asp-validation-for="Input.MiddleName" class="text-danger"></span>
            </div>
            <br />

            <div class="form-floating">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <br />

            <div class="form-floating">
                <input asp-for="Input.NIN" class="form-control" />
                <label asp-for="Input.NIN"></label>
                <span asp-validation-for="Input.NIN" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group">                
                    <label asp-for="Input.IsUserCompanyRep"></label>
                    <br />
                    <label>
                        <input id="IsUserCompanyRep_yes" asp-for="Input.IsUserCompanyRep" />
                        Yes
                    </label>
                    <label>
                        <input id="IsUserCompanyRep_no" asp-for="Input.IsUserCompanyRep" />
                        No
                    </label>               
            </div>
            <br />
           
            <div class="form-floating invisible collapse" id="OrganisationName">
                <input asp-for="Input.OrganisationName" id="InputOrganisationName" class="form-control" />
                <label asp-for="Input.OrganisationName"></label>
                <span asp-validation-for="Input.OrganisationName" class="text-danger"></span>
            </div>
            <br />
                       

            <div class="form-floating">
                <input asp-for="Input.Address" class="form-control" />
                <label asp-for="Input.Address"></label>
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
            <br />

            <div class="form-floating">
                <input asp-for="Input.Town" class="form-control" />
                <label asp-for="Input.Town"></label>
                <span asp-validation-for="Input.Town" class="text-danger"></span>
            </div>
            <br />

            <div class="form-floating">
                <input asp-for="Input.Landmarks" class="form-control" />
                <label asp-for="Input.Landmarks"></label>
                <span asp-validation-for="Input.Landmarks" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group">              
                <div class="form-control">
                    <select asp-for="CountryId" class="w-100"
                            asp-items="Model.SelectCountry">
                        <option>Select Country</option>
                    </select>
                </div>
            </div>
            @Html.HiddenFor(m => m.CountryName, new{ id = "CountryName"})
            <br />

            <div class="form-group">                
                <div class="form-control">
                    <select asp-for="StateId" id="StateId" class="w-100"
                            asp-items="Model.SelectState">
                        <option> Select State</option>
                    </select>
                </div>
            </div>
            @Html.HiddenFor(m => m.StateName, new{ id = "StateName"})
            <br />

            <div class="form-group">               
                <div class="form-control">
                    <select asp-for="LGAId" class="w-100">
                        <option value=""> Select Local Gov't Area</option>
                    </select>
                </div>
            </div>
            @Html.HiddenFor(m => m.LGAName, new{ id = "LGAName"})
            <br />
           
                                         
            <div class="form-group">
                <label asp-for="Input.FileUpload" style="width: 100%;"></label>
                <img id="imgPicture" style="width:80px;height:80px; object-fit:cover" src="">
                <input type="file"
                        accept=".png,.jpg,.jpeg"
                        asp-for="Input.FileUpload"
                        class="form-control"
                       
                        onchange="document.getElementById('imgPicture').src = window.URL.createObjectURL(this.files[0])" />
                <span asp-validation-for="Input.FileUpload" class="text-danger"></span>          
            </div>
            <br />

            <div class="form-group">
                <label asp-for="Input.NINFileUpload" style="width: 100%;"></label>
                <img id="NINFileUpload" style="width:80px;height:80px; object-fit:cover" src="">
                <input type="file"
                       accept=".png,.jpg,.jpeg"
                       asp-for="Input.NINFileUpload"
                       class="form-control"
                       onchange="document.getElementById('NINFileUpload').src = window.URL.createObjectURL(this.files[0])" />
                <span asp-validation-for="Input.NINFileUpload" class="text-danger"></span>

            </div>
            <br />


            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register as Clientele</button>
            <br />
            <br />
        </form>

    </div>

</div>


@section Scripts {

    <script>


        $('#IsUserCompanyRep_yes').change(function () {

            if (document.getElementById('IsUserCompanyRep_yes').checked) {

                document.getElementById('OrganisationName').classList.remove('invisible')
                document.getElementById('OrganisationName').classList.add('visible')
                document.getElementById('OrganisationName').classList.remove('collapse')
                document.getElementById('IsUserCompanyRep_no').checked = false
                document.getElementById('IsUserCompanyRep_yes').checked = true
                
            }
            else{
                document.getElementById('OrganisationName').classList.remove('visible')
                document.getElementById('OrganisationName').classList.add('invisible')
                document.getElementById('OrganisationName').classList.add('collapse')
                document.getElementById('IsUserCompanyRep_no').checked = true
                document.getElementById('IsUserCompanyRep_yes').checked = false
                document.getElementById('InputOrganisationName').value = "" 
                
            }

        })

        $('#IsUserCompanyRep_no').change(function () {

            if (document.getElementById('IsUserCompanyRep_no').checked) {

                document.getElementById('OrganisationName').classList.remove('visible')
                document.getElementById('OrganisationName').classList.add('invisible')
                document.getElementById('OrganisationName').classList.add('collapse')
                document.getElementById('IsUserCompanyRep_no').checked = true
                document.getElementById('IsUserCompanyRep_yes').checked = false
                document.getElementById('InputOrganisationName').value = ""
            }
            else {
                document.getElementById('OrganisationName').classList.remove('invisible')
                document.getElementById('OrganisationName').classList.add('visible')
                document.getElementById('OrganisationName').classList.remove('collapse')
                document.getElementById('IsUserCompanyRep_no').checked = false
                document.getElementById('IsUserCompanyRep_yes').checked = true

            }

        })


        //set textValue from countryselectitem
        $('#CountryId').change(function () {
            let countryName = $("#CountryId option:selected").text()
            $("#CountryName").val(countryName)

        })

        //set textValue from Stateselectitem
        $(function () {
            $('#StateId').change(function () {

                //set textValue from StateSelect
                let _stateName = $("#StateId option:selected").text()
                $("#StateName").val(_stateName)


                var stateId = $(this).val();
                $("#LGAId").empty();

                $.getJSON(`?handler=LocalGovtAreas&stateId=${stateId}`, (data) => {
                    $.each(data, function (i, item) {
                        //console.log(data[1].lgaId);
                        //console.log(item);
                        $("#LGAId").append(`<option value="${item.lgaId}">${item.lgaName}</option>`);
                    });
                });
            });
            //set textValue from StateSelect
            let _stateName = $("#StateId option:selected").text()
            $("#StateName").val(_stateName)
        });

        //set textValue from selectLga
        $('#LGAId').change(function () {
            let lgaName = $("#LGAId option:selected").text()
            $("#LGAName").val(lgaName)

        })

    </script>
   
    <partial name="_ValidationScriptsPartial" />

}